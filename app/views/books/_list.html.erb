<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <table class="table">
        <tbody>
          <tr>
            <th>name</th>
          </tr>
          <tr>
            <th>introduction</th>
          </tr>
        </tbody>
      </table>
      <div class="row">
        <p><%= link_to "プロフィール編集", edit_user_path %></p>
      <br>
      <br>
      <h2 class=pl-4>New Book</h2>
       <%= form_with model: @book do |f| %>
       <form action="/books" accept-charset="UTF-8" method="post">
       <div class="form-group">
        <label for="book_title">Title</label>
        <br>
         <%= f.text_field :title %>
       </div>
       <div class="form-group">
        <label for="book_opinion">Opinion</label>
        <br>
         <%= f.text_area :body%>
       </div>
       <div class="form-group">
         <input type="submit" name="commit" value="Create book" class="btn btn-success" date-disabel-with="Create book">
       <% end %>
      </div>
    </form>
   </div>
  </div>
 </div>
</div>





