<%= render 'list', book: Book.new, user: @user %>

<div class="col-md-8 offset-md-1">
  <h2>Book detail</h2>
  <%= form_with model: @book do |f| %>
   <table class="table">
       <tbody>
           <tr>
               <td>
                 <%= link_to user_path(@user.id) do %>
                 <%= image_tag @book.user.get_profile_image(100,100) %>
                 <br>
                 <%= @user.name %>
                 <% end %>
               </td>
               <td>
                 <%= link_to book_path(@book) do %>
                 <%= @book.title %>
                 <% end %>
               </td>
               <td>
                 <%= @book.body %>
               </td>
               <% end %>
               <td class="btn btn-success"><% if @book.user == current_user %>
                   <%= link_to "Edit", edit_book_path %>
                   <% end %>
               </td>
               <td class="btn btn-sm btn-danger"><% if @book.user == current_user %>
                   <%= link_to "Destroy", book_path(@book), method: :delete, "data-confirm" => "本当に削しますか？" %>
                   <% end %>
               </td>
           </tr>
       </tbody>
   </table>
</div>
</div>
</div>





