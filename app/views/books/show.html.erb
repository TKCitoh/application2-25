<%= render 'list', book: @book, user: @user %>

<div class="col-md-8 offset-md-1">
  <h2>Book detail</h2>
  <%= form_with model: @book do |f| %>
   <table class="table">
       <tbody>
           <tr>
               <td><%= image_tag @book.user.get_profile_image(100,100) %></td>
               <td><%= @book.title %></td>
               <td><%= @book.opinion %></td>
               <% end %>
               <td class="btn btn-success"><% if @book.user == current_user %>
                   <%= link_to "Edit", edit_book_path %>
                   <% end %>
               </td>
               <td class="btn btn-sm btn-danger"><% if @book.user == current_user %>
                   <%= link_to "Destroy", book_path(@book), method: :delete, "data-confirm" => "本当に削しますか？" %>
                   <% end %>
               </td>
           </tr>
       </tbody>
   </table>
</div>





