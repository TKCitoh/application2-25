<%= render 'list', book: @book, user: @user %>

<p id="notice"></p>
<div class="col-md-8 offset-md-1">
  <h2>Books</h2>
  <table class="table table-hover table-inverse">
    <thead>
        <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
        </tr>
     </thead>
     <% @books.each do |book| %>
     <tbody>
       <tr>
         <td>
           <%= image_tag @user.get_profile_image(100,100) %>
         </td>
         <td>
           <% link_to book_path(book) %>
           <%= book.title %>
         </td>
         <td>
           <%= book.body %>
         </td>
       </tr>
     </tbody>
     <% end %>
  </table>
</div>
</main>
